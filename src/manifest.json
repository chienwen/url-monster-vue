{
  "name": "URL Monster",
  "description": "View, edit, and manipulate URL components (scheme, host, path, query, fragment). Encode/decode values and apply changes instantly.",
  "version": null,
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage"
  ],
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "URL Monster",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
